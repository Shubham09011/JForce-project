<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="css/login.css">
</head>
<body>

    <h1></h1>
    <h2> {{INBOX}} </h2>
    {messages.length > 0 && (
        <div className="mt-5">
          <h2>Converstion with Alica</h2>
          <ul className="list-group">
            {messages.map((msg, index) => (
              <li key={index} className={`list-group-item ${msg.isRead ? 'list-group-item-secondary' : ''}`}>
                {msg.text} {msg.isRead ? '(Read)' : '(Unread)'}
              </li>
            ))}
          </ul>
          <button className="btn btn-success mt-3" onClick={markAsRead}>
            Mark all as Read
          </button>
        </div>
      )}
</body>
</html>